<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/motionLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:touchscreenBlocksFocus="true"
    android:descendantFocusability="blocksDescendants"
    app:layoutDescription="@xml/player_motion_scene"
    tools:context=".MainActivity">
<androidx.fragment.app.FragmentContainerView
    android:id="@+id/MainView"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/MinimizedPlayerBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/song_card_bg"
        android:elevation="3dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <SeekBar
            android:id="@+id/MinimizedPlayerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:focusable="false"
            android:max="1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:progress="1"
            android:progressBackgroundTint="@color/lightgray"
            android:thumb="@color/transparent" />

        <LinearLayout
            android:id="@+id/MinimizedPlayerContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center|start"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/MinimizedPlayerImageView"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:clickable="false"
                android:focusable="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MinimizedPlayerSongNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="marquee"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/inter_semibold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Song Name"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/MinimizedPlayerArtistView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/inter_medium"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Artist"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MinimizedPlayerControls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:clickable="false"
                android:focusable="false"
                android:gravity="end">

                <Button
                    android:id="@+id/MinimizedPlayerShuffleBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone"
                    android:background="@color/transparent"
                    android:foreground="@drawable/baseline_shuffle_24" />
                <Button
                    android:id="@+id/MinimizedPlayerPreviousBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:background="@color/transparent"
                    android:foreground="@drawable/baseline_skip_previous_24" />

                <Button
                    android:id="@+id/MinimizedPlayerPlayPauseBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="visible"
                    android:background="@color/transparent"
                    android:foreground="@drawable/baseline_play_arrow_24" />

                <ProgressBar
                    android:id="@+id/MinimizedPlayerPlayPauseSpinner"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/MinimizedPlayerNextBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:background="@color/transparent"
                    android:foreground="@drawable/baseline_skip_next_24" />
                <Button
                    android:id="@+id/MinimizedPlayerRepeatBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:visibility="gone"
                    android:focusable="false"
                    android:background="@color/transparent"
                    android:foreground="@drawable/baseline_repeat_24" />



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>